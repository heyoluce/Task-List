<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kg.zholdoshov.tasklist.repository.UserRepository">
    <resultMap id="UserResultMap" type="kg.zholdoshov.tasklist.domain.user.User" autoMapping="false">
        <id property="id" column="user_id"/>
        <result property="name" column="user_name"/>
        <result property="username" column="user_username"/>
        <result property="password" column="user_password"/>
        <collection property="roles"
                    ofType="kg.zholdoshov.tasklist.domain.user.Role"
                    autoMapping="false">
            <result property="name" column="user_role_role"/>
        </collection>
        <collection property="tasks"
                    ofType="kg.zholdoshov.tasklist.domain.task.Task"
                    resultMap="kg.zholdoshov.tasklist.repository.TaskRepository.TaskResultMap"
                    autoMapping="false"/>
    </resultMap>
</mapper>